<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="147dp"
        android:layout_height="184dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/book_image_desc" />

    <TextView
        android:id="@+id/display_book_name"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/book_name"
        android:paddingTop="0dp"
        android:text="@string/book_name" />


    <TextView
        android:id="@+id/display_isbn"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/book_isbn"
        android:text="@string/book_isbn" />

    <TextView
        android:id="@+id/display_pages"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/display_pages_both_desc"
        android:text="@string/display_pages_both"/>

    <Button
        android:id="@+id/add_reading_entry"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/add_entry_button" />

    <ProgressBar
        android:id="@+id/book_completion_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="352dp"
        android:layout_height="20dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:visibility="visible"
        tools:layout_editor_absoluteY="194dp" />

    <TextView
        android:id="@+id/monthtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/monthname"/>

    <GridView
        android:id="@+id/heatmapgrid"
        android:layout_width="352dp"
        android:layout_height="311dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:drawSelectorOnTop="false"
        android:horizontalSpacing="16dp"
        android:numColumns="7"
        android:padding="16dp"
        android:verticalSpacing="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>